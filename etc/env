#!/bin/bash
# Ken Roberts 2010-11-02
# modified    2014-09-25

[[ -n "$KRSTUFF_LOG" ]]	&& echo "Entering ${BASH_SOURCE[0]}"

set -o physical

# If it's root user sometimes the system profile unsets things.
if [[ "`id -u`" = "0" ]]; then
	ENV='/root/.profile'
	if [ -z "$USER" ]; then
		USER='root'
	fi;
	if [ -z "$LOGNAME" ]; then
		LOGNAME='root'
	fi;
else
	ENV="$HOME/.bash_profile"
	LOGNAME="`who -m | sed 's/ .*//'`"
fi;
export USER LOGNAME

# Set up the prompt.
if [ "`id -u`" = "0" ]; then
	PS1='\[\033[01;05m\]\u\[\033[00m\]\[\033[01;31m\]@\h\[\033[01;34m\] $PWD
\$\[\033[00m\] '
elif [ "$LOGNAME" = "$USER" ]; then
	PS1='\[\033[01;32m\]\u\[\033[01;31m\]@\h\[\033[01;34m\] $PWD
\$\[\033[00m\] '
else
	PS1='\[\033[01;35m\]\u\[\033[01;31m\]@\h\[\033[01;34m\] $PWD
%\[\033[00m\] '
fi
export PS1

BROWSER='firefox'
CATALINA_OPTS='-Xmx2048M -XX:MaxPermSize=512M'
CDPATH='.:..'
CLASSPATH='../rootLocation/conf'
EDITOR='vim'
GRAILS_OPTS='-Xmx2048M -XX:MaxPermSize=512M'
HISTTIMEFORMAT="%Z %Y-%m-%d %H:%M:%S"
JAVA_OPTS="-Xmx2048m -XX:MaxPermSize=512M"
GRAILS_PRINTWIDTH=140

export BROWSER CATALINA_OPTS CDPATH CLASSPATH EDITOR ENV GRAILS_OPTS HISTTIMEFORMAT JAVA_OPTS

[[ -n "$KRSTUFF_LOG" ]]	&& echo "Leaving ${BASH_SOURCE[0]}"
